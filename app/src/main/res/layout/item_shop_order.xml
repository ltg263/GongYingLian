<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <com.jxxx.gyl.utils.view.SquareImageView
        android:id="@+id/iv_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img"
        android:layout_alignBottom="@id/iv_img"
        android:layout_marginVertical="5dp"
        android:layout_toEndOf="@id/iv_img">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:background="@drawable/circle_solid_f4f4f4_5"
            android:padding="2dp"
            android:text="0斤"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:padding="2dp"
            android:text="￥0/斤"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_price"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_666666"
            android:text="0"/>

    </RelativeLayout>
</RelativeLayout>