<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bj_theme"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/circle_solid_fff_15"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="基本信息"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="门店名称"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_storefrontName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写门店名称"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/color_bj_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="分店名称"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_subbranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写分店名称(选填)"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/color_bj_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="商家类目"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_businessCategoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableEnd="@mipmap/ic_right_gray"
                        android:hint="请选择贴近端户经营范围的类目"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/color_bj_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="城市区域"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_storefrontAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableEnd="@mipmap/ic_right_gray"
                        android:hint="请选择城市区域"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/color_bj_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="门店地址"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_storefrontDetailedAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写门店地址"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/circle_solid_fff_15"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="其他信息"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="联系人"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_realName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写真实姓名"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/color_bj_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="营业状态"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_businessStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableEnd="@mipmap/ic_right_gray"
                        android:hint="请选择营业状态"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_solid_fff_15"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="上传门头图"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <com.youth.banner.Banner
                    android:id="@+id/banner_storefrontImageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/show_storefrontImageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:visibility="gone"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:id="@+id/rl_storefrontImageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:background="@drawable/circle_solid_666_15">

                    <ImageView
                        android:id="@+id/iv_storefrontImageUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="-15dp"
                        android:scaleType="center"
                        android:src="@mipmap/ic_paizhao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_storefrontImageUrl"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="拍摄店铺门面照片"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@null"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:text="照片要求：上传清晰面门脸照片，需展示完整门偏门槛"
                    android:textColor="@color/color_666666"
                    android:textCursorDrawable="@drawable/common_edit_input_line"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_solid_fff_15"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="销售信息"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="销售码"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_invitationCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请填写销售码(选填)"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_333333"
                        android:textCursorDrawable="@drawable/common_edit_input_line"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bnt_details_height"
                android:layout_marginVertical="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_solid_theme_25"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="@color/white"
                android:textSize="@dimen/bnt_details_text_size" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>