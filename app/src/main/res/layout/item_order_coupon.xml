<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_yhq_kybj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/ic_mine_yhq_bj_no"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_yhq_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/color_ffffff"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_yhq_qian"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tv_yhq_qian"
                android:text="元"
                android:textColor="@color/color_ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_yhq_syfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_yhq_qian"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="满200元30"
                android:textColor="@color/color_ffffff"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_yhq_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="全部商品可用(123456)"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_yhq_sypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:text="限制：(123456)"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_yhq_sj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="时间：2020-02-12"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_yhq_type"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:ems="1"
            android:gravity="center"
            android:text="已过期"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yhq_kybj_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/ic_mine_yhq_bj_yes">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_yhq_qian_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:text="￥"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_yhq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_yhq_qian_1"
                android:layout_toEndOf="@id/tv_yhq_qian_1"
                android:gravity="bottom"
                android:text="0.00"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_yhq_syfs_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_yhq_qian_1"
                android:maxLines="1"
                android:text="满200元"
                android:textColor="@color/color_ffffff"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingStart="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_yhq_bt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="全部商品可用(123456)"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_yhq_sypt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:text="限制：(123456)"
                android:textColor="@color/color_666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_yhq_sj_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="时间：2020-02-12"
                android:textColor="@color/color_666666"
                android:textSize="12dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_yhq_type_1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:ems="1"
            android:gravity="center"
            android:text="立即使用"
            android:textColor="@color/color_blue_theme"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

</LinearLayout>
